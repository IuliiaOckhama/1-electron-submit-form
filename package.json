  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.50",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "axios": "^0.20.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.2.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "electron-is-dev": "^1.2.0",
    "electron-require": "^0.3.0",
    "nodemon": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.1",
    "react-scripts": "3.4.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "slate": "^0.59.0",
    "slate-history": "^0.59.0",
    "slate-react": "^0.59.0",
    "typescript": "^4.0.3",
    "wait-on": "^5.2.0"
  },
  "peerDependencies": {
    "postcss": "^8.0.0"
  },
  "scripts": {
    "start-react": "react-scripts start",
    "build:css": "postcss src/styles/main.css -o src/index.css",
    "watch:css": "postcss src/styles/main.css -o src/index.css -w",
    "build:electron": "webpack --config ./webpack.config.js",
    "dev": "concurrently \"yarn:start-react\" \"yarn:watch:css\" \"wait-on http://localhost:3000 && tsc --project electron/tsconfig.json && electron .\"   ",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "yarn run build && yarn:build:css && node_modules/.bin/build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "9.8.6",
    "eslint-config-prettier": "^6.12.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.3",
    "npm-run-all": "^4.1.5",
